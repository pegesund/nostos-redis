# Test list operations

redisConnect(url: String) = __native__("Redis.connect", url)
redisDel(conn, key: String) = { __native__("Redis.del", conn, key); receive { msg -> msg } }
redisLpush(conn, key: String, value: String) = { __native__("Redis.lpush", conn, key, value); receive { msg -> msg } }
redisRpush(conn, key: String, value: String) = { __native__("Redis.rpush", conn, key, value); receive { msg -> msg } }
redisLpop(conn, key: String) = { __native__("Redis.lpop", conn, key); receive { msg -> msg } }
redisRpop(conn, key: String) = { __native__("Redis.rpop", conn, key); receive { msg -> msg } }
redisLrange(conn, key: String, start: Int, stop: Int) = { __native__("Redis.lrange", conn, key, start, stop); receive { msg -> msg } }
redisLlen(conn, key: String) = { __native__("Redis.llen", conn, key); receive { msg -> msg } }

check(name: String, ok: Bool) = if ok then println("  PASS: " ++ name) else println("  FAIL: " ++ name)

main() = {
    println("=== Testing List Operations ===")
    conn = redisConnect("redis://127.0.0.1/")

    redisDel(conn, "test:list")

    redisLpush(conn, "test:list", "first")
    redisLpush(conn, "test:list", "second")
    redisRpush(conn, "test:list", "third")

    ("ok", llen) = redisLlen(conn, "test:list")
    check("LLEN", llen == 3)

    ("ok", lrange) = redisLrange(conn, "test:list", 0, -1)
    check("LRANGE", length(lrange) == 3)

    ("ok", lpop) = redisLpop(conn, "test:list")
    check("LPOP", lpop == "second")

    ("ok", rpop) = redisRpop(conn, "test:list")
    check("RPOP", rpop == "third")

    redisDel(conn, "test:list")
    println("List tests completed!")
    0
}
